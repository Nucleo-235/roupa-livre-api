<style>
  .body-field-preview-container {
    height: 0;
    overflow: hidden;
    padding-top: 177%;
    position: relative;
    border: solid 1px #ccc;
  }
  .body-field-preview {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    padding: 10px;
  }
  .actions {
    margin-top: 10px;
  }
</style>
<%= form_for @global_tag, url: (@global_tag.new_record? ? web_global_tags_path : web_global_tag_path(@global_tag)), method: (@global_tag.new_record? ? :post : :patch) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <% if @global_tag.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@global_tag.errors.count, "error") %> prohibited this global_tag from being saved:</h2>

          <ul>
          <% @global_tag.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <% if @global_tag.new_record? %>
        <div class="field form-group">
          <%= f.label :name, { class: 'col-form-label' } %>
          <%= f.text_field :name, { class: 'form-control' } %>
        </div>
      <% end %>
      <div class="field form-group">
        <%= f.label :description, { class: 'col-form-label' } %>
        <%= f.text_field :description, { class: 'form-control' } %>
      </div>
      <div class="field form-group">
        <%= f.label :body %>
        <%= f.text_area :body, { class: 'form-control body-field' } %>
      </div>
      <div class="actions text-right">
        <%= f.submit 'Salvar', :class => 'btn btn-space btn-primary' %>
        <%= link_to 'Cancelar', web_global_tags_path %>
      </div>
    </div>
    <div class="col-md-6">
      <label style="display:block">Preview</label>
      <div class="body-field-preview-container">
        <div class="body-field-preview"></div>
      </div>
    </div>
  </div>
<% end %>